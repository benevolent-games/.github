{
	"name": "@benev/website",
	"private": true,
	"version": "0.0.7",
	"description": "",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "run-s _clean _build:app _build:ssg _ln",
		"start": "run-p http watch",
		"test": "exit 0",
		"_clean": "rm -rf x",
		"_build:app": "turtle build --out=x",
		"_build:ssg": "turtle ssg --in=s,x --out=x --exclude=bin",
		"_ln": "run-s _ln:s _ln:assets",
		"_ln:s": "ln -s \"$(realpath s)\" x/s",
		"_ln:assets": "ln -s \"$(realpath assets)\" x/assets",
		"_watch": "turtle watch --in=s,x --out=x --exclude=bin -v",
		"_http": "http-server x"
	},
	"dependencies": {
		"@benev/slate": "^0.3.4"
	},
	"devDependencies": {
		"@benev/turtle": "^0.6.12",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/benevolent-games/site.git"
	},
	"bugs": {
		"url": "https://github.com/benevolent-games/site/issues"
	},
	"homepage": "https://github.com/benevolent-games/site#readme"
}
